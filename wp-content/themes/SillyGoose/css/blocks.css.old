/* Portfolio Grid Styles */
.portfolio-grid {
  display: grid;
  gap: 2rem;
  margin: 2rem 0;
}

.portfolio-cols-1 { grid-template-columns: 1fr; }
.portfolio-cols-2 { grid-template-columns: repeat(2, 1fr); }
.portfolio-cols-3 { grid-template-columns: repeat(3, 1fr); }
.portfolio-cols-4 { grid-template-columns: repeat(4, 1fr); }

.portfolio-item {
  overflow: hidden;
  position: relative;
}

.portfolio-thumbnail {
  position: relative;
  overflow: hidden;
  border-radius: var(--radius) var(--radius) 0 0;
}

.portfolio-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.portfolio-item:hover .portfolio-image {
  transform: scale(1.05);
}

.portfolio-category-badge {
  position: absolute;
  top: 1rem;
  right: 1rem;
}

.portfolio-category-badge .badge {
  background: rgba(255, 255, 255, 0.9);
  color: var(--foreground);
}

.portfolio-content {
  padding: 1.5rem;
}

.portfolio-title {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  color: var(--foreground);
}

.portfolio-excerpt {
  color: var(--muted-foreground);
  margin-bottom: 1rem;
  font-size: 0.875rem;
  line-height: 1.5;
}

.portfolio-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.tag-badge {
  font-size: 0.75rem;
  background: var(--muted);
  color: var(--muted-foreground);
}

.portfolio-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
}

.portfolio-result .result-label {
  color: var(--muted-foreground);
  font-size: 0.875rem;
}

.portfolio-result .result-value {
  font-weight: 500;
  color: var(--primary);
  margin-left: 0.25rem;
}

.portfolio-link {
  color: var(--muted-foreground);
  transition: color 0.3s ease;
}

.portfolio-link:hover {
  color: var(--primary);
}

/* Services Grid Styles */
.services-grid {
  display: grid;
  gap: 2rem;
  margin: 2rem 0;
}

.services-cols-1 { grid-template-columns: 1fr; }
.services-cols-2 { grid-template-columns: repeat(2, 1fr); }
.services-cols-3 { grid-template-columns: repeat(3, 1fr); }
.services-cols-4 { grid-template-columns: repeat(4, 1fr); }

.service-item {
  text-align: left;
}

.service-icon {
  display: inline-flex;
  padding: 0.75rem;
  border-radius: 50%;
  margin-bottom: 1.5rem;
}

.service-icon.icon-primary {
  background: rgba(255, 107, 53, 0.1);
  color: var(--primary);
}

.service-icon.icon-secondary {
  background: rgba(78, 205, 196, 0.1);
  color: var(--secondary);
}

.service-icon.icon-accent {
  background: rgba(255, 210, 63, 0.1);
  color: var(--accent);
}

.service-title {
  font-size: 1.25rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: var(--foreground);
}

.service-description {
  color: var(--muted-foreground);
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.service-features {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  margin-bottom: 1.5rem;
}

.feature-item {
  display: flex;
  align-items: center;
  font-size: 0.875rem;
}

.feature-bullet {
  width: 0.5rem;
  height: 0.5rem;
  background: var(--primary);
  border-radius: 50%;
  margin-right: 0.75rem;
  flex-shrink: 0;
}

.feature-text {
  color: var(--muted-foreground);
}

.service-pricing {
  background: var(--muted);
  padding: 1rem;
  border-radius: var(--radius);
  text-align: center;
  margin-top: 1.5rem;
}

.price-label {
  display: block;
  font-size: 0.875rem;
  color: var(--muted-foreground);
  margin-bottom: 0.25rem;
}

.price-value {
  display: block;
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--primary);
  margin-bottom: 0.25rem;
}

.timeline-value {
  display: block;
  font-size: 0.875rem;
  color: var(--muted-foreground);
}

/* Responsive Design */
@media (max-width: 1024px) {
  .portfolio-cols-4,
  .services-cols-4 {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media (max-width: 768px) {
  .portfolio-cols-3,
  .portfolio-cols-4,
  .services-cols-3,
  .services-cols-4 {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .portfolio-grid,
  .services-grid {
    gap: 1.5rem;
  }
}

@media (max-width: 480px) {
  .portfolio-cols-2,
  .portfolio-cols-3,
  .portfolio-cols-4,
  .services-cols-2,
  .services-cols-3,
  .services-cols-4 {
    grid-template-columns: 1fr;
  }
  
  .portfolio-grid,
  .services-grid {
    gap: 1rem;
  }
}